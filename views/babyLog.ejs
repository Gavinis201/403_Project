<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Baby Log</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        /* General Reset */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
            color: #333;
        }

        .content-container {
            max-width: 900px;
            margin: 2rem auto;
            padding: 2rem;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .content-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .content-header h1 {
            font-size: 1.8rem;
            margin-bottom: 0.5rem;
            color: #4a90e2;
        }

        .content-header p {
            font-size: 1rem;
            color: #666;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 2rem;
        }

        table th, table td {
            border: 1px solid #ddd;
            padding: 0.75rem;
            text-align: left;
        }

        table th {
            background-color: #4a90e2;
            color: #fff;
        }

        table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        table tr:hover {
            background-color: #f1f1f1;
        }

        .logout-form {
        display: inline-block;
        margin-left: 20px;
        padding: 0;
        margin: 0;
        }

        .logout-form button {
        background-color: #4a90e2;
        color: white;
        border: none;
        padding: 10px 20px;
        font-size: 1rem;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        width: auto;
        outline: 1px solid white;
        }

        .logout-form button:hover {
        background-color: #0073e6;
        }

        .button-container {
            display: flex;
            gap: 0.5rem;
        }

        button {
            background-color: #4a90e2;
            color: #fff;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 5px;
            cursor: pointer;
            font-size: 0.9rem;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: #005bb5;
        }

        button.delete {
            background-color: #e60023;
        }

        button.delete:hover {
            background-color: #c2001b;
        }

        .add-button {
            text-align: center;
            margin-top: 1rem;
        }

        .add-button button {
            background-color: #28a745;
            padding: 0.75rem 1.5rem;
            font-size: 1rem;
        }

        footer {
            text-align: center;
            padding: 1rem;
            background: #4a90e2;
            color: #fff;
            margin-top: 2rem;
            font-size: 0.9rem;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .content-container {
                padding: 1.5rem;
            }

            .content-header h1 {
                font-size: 1.5rem;
            }

            .content-header p {
                font-size: 0.9rem;
            }
        }
    </style>
</head>
<body>
    <header>
        <div class="header-content">
            <div class="logo">
                <h1><a href="/babyLog" style="text-decoration: none; color:  white;">Baby Health Tracker</a></h1>
            </div><br>
            <form class="logout-form" action="/logout" method="POST">
                <button type="submit">Log Out</button>
            </form>            
        </div>
    </header>

    <section class="content-container">
        <div class="content-header">
            <h1>Baby Log</h1>
            <p>View and manage logs below.</p>
        </div>

        <div style="margin-bottom: 1rem;">
            <label for="activityFilter">Filter by Activity: </label>
            <select id="activityFilter" onchange="applyFilters()">
                <option value="">All Activities</option>
                <% activities.forEach((activity) => { %>
                    <option value="<%= activity.activity_description %>" <%= selectedActivity === activity.activity_description ? 'selected' : '' %>><%= activity.activity_description %></option>
                <% }) %>
            </select>
        
            <label for="startDate">Start Date: </label>
            <input type="date" id="startDate" value="<%= startDate || '' %>" onchange="applyFilters()">
        
            <label for="endDate">End Date: </label>
            <input type="date" id="endDate" value="<%= endDate || '' %>" onchange="applyFilters()">
        
            <!-- Reset Button -->
            <!-- Reset Button -->
            <button onclick="resetFilters()" style="
            background-color: #ccc; 
            color: #333; 
            border: 1px solid #999; 
            padding: 0.3rem 0.8rem; 
            border-radius: 4px; 
            font-size: 0.9rem; 
            cursor: pointer; 
            transition: background-color 0.3s;">
            Reset
            </button>
        </div>

        <% if (logs && logs.length > 0) { %>
            <table id="babyLog">
                <thead>
                    <tr>
                        <th onclick="sortTable(0)">Activity</th>
                        <th>Date</th>
                        <th>Notes</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% logs.forEach((log) => { %>
                        <tr>
                            <td><%= log.activity %></td>
                            <td><%= new Date(log.activity_date).toLocaleDateString('en-US', { weekday: 'short', month: 'short', day: 'numeric', year: 'numeric' }) %></td>
                            <td><%= log.activity_notes %></td>
                            <td>
                                <div class="button-container">
                                    <form action="/deleteLog/<%= log.log_id %>" method="POST" style="display:inline;">
                                        <button type="submit" class="delete" onclick="return confirm('Are you sure you want to delete?')" >Delete</button>
                                    </form>
                                    <form action="/editLog/<%= log.log_id %>" method="GET" style="display:inline;">
                                        <button type="submit">Edit</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
            <div class="add-button">
                <form action="/addLog" method="GET">
                    <button type="submit">Add a Log</button>
                </form>
            </div>
        <% } else { %>
            <p style="text-align: center;">No logs available. Start by adding a new log!</p>
            <div class="add-button">
                <form action="/addLog" method="GET">
                    <button type="submit">Add a Log</button>
                </form>
            </div>
        <% } %>
    </section>

    <footer>
        <p>&copy; 2024 Baby Health Tracker | Helping parents give the best care</p>
    </footer>

    <script>
        function applyFilters() {
            const activity = document.getElementById('activityFilter').value;
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;

            const query = new URLSearchParams();
            if (activity) query.set('activity', activity);
            if (startDate) query.set('startDate', startDate);
            if (endDate) query.set('endDate', endDate);

            window.location.href = `/babyLog?${query.toString()}`;
        }

        function resetFilters() {
            window.location.href = '/babyLog'; // Clear all query parameters
        }


        function sortTable(n) {
            var table, rows, switching, i, x, y, shouldSwitch, dir, switchcount = 0;
            table = document.getElementById("babyLog");
            switching = true;
            dir = "asc";
            while (switching) {
                switching = false;
                rows = table.rows;
                for (i = 1; i < (rows.length - 1); i++) {
                    shouldSwitch = false;
                    x = rows[i].getElementsByTagName("TD")[n];
                    y = rows[i + 1].getElementsByTagName("TD")[n];
                    if (dir == "asc") {
                        if (x.innerHTML.toLowerCase() > y.innerHTML.toLowerCase()) {
                            shouldSwitch = true;
                            break;
                        }
                    } else if (dir == "desc") {
                        if (x.innerHTML.toLowerCase() < y.innerHTML.toLowerCase()) {
                            shouldSwitch = true;
                            break;
                        }
                    }
                }
                if (shouldSwitch) {
                    rows[i].parentNode.insertBefore(rows[i + 1], rows[i]);
                    switching = true;
                    switchcount ++;
                } else {
                    if (switchcount == 0 && dir == "asc") {
                        dir = "desc";
                        switching = true;
                    }
                }
            }
        }
    </script>
</body>
</html>
