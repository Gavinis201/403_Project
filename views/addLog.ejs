<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Baby Health Tracker</title>
  <link rel="stylesheet" href="/styles.css">
  <style>

    /* General Form Styling */
.form-container {
    width: 90%; /* Use a responsive width */
    max-width: 600px; /* Limit the maximum width */
    margin: 2rem auto; /* Center the form and add spacing */
    padding: 20px;
    background: #ffffff; /* Keep it clean and professional */
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    border: 1px solid #ddd;
}

/* Form Header Styling */
.form-header {
    text-align: center;
    margin-bottom: 1.5rem;
}

.form-header h1 {
    font-size: 1.8rem;
    color: #333;
}

.form-header p {
    font-size: 1rem;
    color: #666;
}

/* Input Fields */
input[type="text"], 
input[type="date"], 
select {
    width: 100%;
    padding: 0.8rem;
    font-size: 1rem;
    border: 1px solid #ccc;
    border-radius: 5px;
    box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
    transition: border-color 0.3s ease;
    margin-top: 0.5rem;
}

input[type="text"]:focus, 
input[type="date"]:focus, 
select:focus {
    border-color: #4a90e2;
    outline: none;
}

/* Labels */
label {
    font-size: 1rem;
    font-weight: bold;
    color: #333;
}

/* Form Group */
.form-group {
    margin-bottom: 1.5rem;
}

/* Submit Button */
.button {
    display: block;
    width: 100%;
    padding: 0.8rem;
    font-size: 1rem;
    color: #fff;
    background-color: #4a90e2;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    text-align: center;
    transition: background-color 0.3s ease;
}

.button:hover {
    background-color: #357ABD;
}

/* Form Actions (if needed for multiple buttons) */
.form-actions {
    text-align: center;
    margin-top: 1rem;
}

textarea {
    width: 100%; /* Make it fill the available width */
    padding: 0.8rem;
    font-size: 1rem;
    border: 1px solid #ccc;
    border-radius: 5px;
    box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
    transition: border-color 0.3s ease;
    resize: vertical; /* Allow vertical resizing only (optional) */
    margin-top: 0.5rem;
}

textarea:focus {
    border-color: #4a90e2;
    outline: none;
}



    </style>
</head>
<body>

    <header>
        <div class="header-content">
            <div class="logo">
                <h1><a href="/" style="text-decoration: none; color:  white;">Baby Health Tracker</a></h1>
            </div><br>
            <div class="button-group">
                <a href="/" class="btn">Log Out</a>
                </div>
        </div>
    </header>
    <section class="form-container">
        <div class="form-header">
            <h1>Add Log</h1>
            <p style="padding-bottom: 10px;">Fill out the details below to submit your new log</p>
        </div>
    </header>
    <section class="form-container">
        <form action="/addLog" method="POST">
            <div class="form-group">
                <label for="activity">Activity:</label>
                <select id="activity" name="activity" required>
                    <% activity_types.forEach(type => { %>
                        <option value="<%= type.activity_id %>"><%= type.activity_description %></option>
                    <% }) %>
                </select>
            </div>

            <div class="form-group">
                <label for="date">Date</label>
                <input type="date" id="date" name="date" required>
            </div>
            
            <div class="form-group">
                <label for="Notes">Notes</label>
                <textarea id="Notes" name="Notes" required></textarea>
            </div>
            
            <div class="form-actions">
                <button type="submit" class="button">Submit</button>
            </div>
        </form>
    </section>
</section>
    <!-- Footer -->
    <footer>
        <p>&copy; 2023 Baby Health Tracker | Helping parents give the best care</p>
  </footer>

</body>
</html>